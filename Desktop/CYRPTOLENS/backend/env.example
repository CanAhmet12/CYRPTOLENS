# Database Configuration
DATABASE_URL=postgresql://cryptolens_user:cryptolens_pass@localhost:5432/cryptolens_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys
COINGECKO_API_KEY=
BINANCE_API_KEY=
BINANCE_API_SECRET=
FEAR_GREED_API_KEY=

# OpenAI Configuration (for v6)
# CRITICAL: Never commit real API keys to git!
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Application Configuration
APP_NAME=CryptoLens
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# API Gateway
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000

# Service URLs (for microservices communication)
AUTH_SERVICE_URL=http://localhost:8001
MARKET_SERVICE_URL=http://localhost:8002
PORTFOLIO_SERVICE_URL=http://localhost:8003
ANALYTICS_SERVICE_URL=http://localhost:8004
TREND_SERVICE_URL=http://localhost:8005
AI_SERVICE_URL=http://localhost:8006

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO

